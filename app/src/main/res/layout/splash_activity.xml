<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_wait_splash_activity"
        style="@style/splashTv"
        android:id="@+id/sa_tv_id"
        />


    <ProgressBar
        android:layout_width="@dimen/pbDimen"
        android:layout_height="@dimen/pbDimen"
        style="@style/uiProgressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/sa_pb_id"/>

</RelativeLayout>